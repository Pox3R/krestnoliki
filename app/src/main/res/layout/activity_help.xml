<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#e12e2e">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ПРАВИЛА\n\nИгроки по очереди ходят на поле 3х3. Первый игрок, кто выстроит в ряд 3 своих знака по горизонтали, вертикали или диагонали, будет победителем. Первый ход - крестики.\n"
        android:textColor="#000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">

        <Button
            android:id="@+id/buttonBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Назад"
            android:background="#05d901"
            android:textColor="#fff"
            android:padding="10dp"/>

    </LinearLayout>

</LinearLayout>